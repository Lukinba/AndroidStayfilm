<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:background="#ffffff">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/icon_stay"
        android:id="@+id/imgItem"
        tools:ignore="ContentDescription,MissingConstraints,UnusedAttribute"
        android:contentDescription=""
        android:elevation="15dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/txtData"
        android:textSize="22sp"
        android:padding="3dp"
        android:textColor="@android:color/black"
        android:text="@string/_23_10_1990"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imgItem"
        app:layout_constraintHorizontal_bias="0.66"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toLeftOf="@+id/txtHoraUm"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/txtHoraUm"
        android:text="@string/horarios"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/txtHoraDois"
        android:text="@string/horarios"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtHoraUm"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/txtHoraTres"
        android:text="@string/horarios"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/txtHoraDois"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>